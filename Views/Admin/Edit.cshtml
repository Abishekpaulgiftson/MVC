@model mvc_1.Models.View_Models.Edittagrequest


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit tag_Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    @if (Model != null)
    {
        <form method="post">
           <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text"id="id"class="form-control"asp-for="id" readonly/>
           </div>
          <div>
            <label class="form-label">Name</label>
            <input type="text"name="name"class="form-control"asp-for="Name"/>
          </div>
         <div>
            <label class="form-label">DisplayName</label>
            <input type="text"displayname="displayname"class="form-control"asp-for="DisplayName" />
         </div>
        <div class="mb-3">
            <div class="d-flex">
            <button type="submit"class="btn">Update</button>
            <button class="btn btn-danger";type="submit"asp-area=""asp-controller="Admin"asp-action="Delete">Delete</button>
            </div>
        </div>
        </form>
    }
    else
    {
        <p>Tags are not found</p>
    }
</div>
