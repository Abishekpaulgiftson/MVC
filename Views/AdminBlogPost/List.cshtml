@model List<mvc_1.Models.Domain.Blog_model>


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Blog-Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th> Id </th>
                    <th> Heading </th>
                    <th>Tags</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var blog_Model in Model)
                {
                    <tr>
                        <td>@blog_Model.Id</td>
                        <td>@blog_Model.Heading</td>
                        <td>
                            <div class="d-flex">
                                @foreach(var tag in blog_Model.tags)
                                {
                                    <span class="badge bg-secondary me-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a asp-area="" asp-controller="AdminBlogPost" asp-action="Edit" asp-route-id="@blog_Model.Id">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No BlogPosts found!</p>
    }
</div>
